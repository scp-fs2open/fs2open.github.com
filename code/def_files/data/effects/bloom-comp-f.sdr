//? #version 150


in vec4 fragTexCoord;

out vec4 fragOut0;

uniform sampler2D bloomed;

layout (std140) uniform genericData {
	float xSize;
	float ySize;
	float normalization;
	float bloom_intensity;
};

void main() {
	vec3 bloom = texture(bloomed, fragTexCoord.xy).rgb;
	fragOut0.rgb = bloom * normalization;
	fragOut0.a = bloom_intensity;
}
